{
  "name": "wrld-react",
  "version": "1.1.0",
  "description": "A React Component for wrld.js",
  "author": "WRLD",
  "license": "See license in LICENSE.md",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/wrld3d/wrld-react.git"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle --no-compress --format modern,cjs --jsx React.createElement",
    "start": "microbundle watch --no-compress --format modern,cjs --jsx React.createElement",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test:unit": "react-scripts test --env=jsdom --watchAll=false",
    "test:watch": "react-scripts test --env=jsdom"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "wrld.js": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^12.20.13",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "eslint-config-wrld-react": "^1.1.0",
    "microbundle": "^0.13.3",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.0",
    "typescript": "^4.3.5",
    "wrld.js": "^1.1.0"
  },
  "files": [
    "dist"
  ]
}
